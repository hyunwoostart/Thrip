<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>회원가입</title>
        <link rel="stylesheet" href="../public/css/reset.css" />
        <link rel="stylesheet" href="../public/css/common.css" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <form id="my-form">
            <label for="username">이름</label>
            <input type="text" id="username" placeholder="이름을 입력하세요" required readonly /><br />
            <label for="userId">아이디</label>
            <input type="text" id="userId" placeholder="아이디를 입력하세요" required readonly /><br />
            <label for="pw">비밀번호</label>
            <input type="password" id="pw" placeholder="비밀번호를 입력하세요" required /><br />
            <label for="confirmPw">비밀번호 확인</label>
            <input type="password" id="confirmPw" placeholder="비밀번호를 다시 입력하세요" required /><br />
            <div class="diffPw"></div>
            <label for="email">이메일</label>
            <input type="email" id="email" placeholder="이메일을 입력하세요" required /><br />
            <label for="tel">전화번호</label>
            <input type="number" id="tel" placeholder="전화번호를 입력하세요" required /><br />
            <button type="button" onclick="updateFunc()">회원 정보 수정</button>
        </form>
        <script>
            const form = document.forms['my-form'];
            (async function () {
                const res = await axios({
                    method: 'GET',
                    url: '/api/member/find',
                    headers: {
                        Authorization: `Bearer ${localStorage.getItem('token')}`,
                    },
                });
                const { username, userId, password, email, tel } = res.data.result;
                form.username.value = username;
                form.userId.value = userId;
                form.email.value = email;
                form.tel.value = tel;
            })();

            form.confirmPw.addEventListener('keyup', function () {
                if (form.pw.value != form.confirmPw.value) {
                    document.querySelector('.diffPw').textContent = '비밀번호가 일치하지 않습니다.';
                } else {
                    document.querySelector('.diffPw').textContent = '';
                }
            });

            async function updateFunc() {
                let data = {};
                if (form.pw.value && form.pw.value != form.confirmPw.value) {
                    alert('비밀번호를 다시 확인해주세요.');
                    return;
                } else if (form.pw.value && form.pw.value === form.confirmPw.value) {
                    data = {
                        pw: form.pw.value,
                        email: form.email.value,
                        tel: form.tel.value,
                    };
                } else {
                    data = {
                        email: form.email.value,
                        tel: form.tel.value,
                    };
                }
                const res = await axios({
                    method: 'PATCH',
                    url: '/api/member/update',
                    data,
                    headers: {
                        Authorization: `Bearer ${localStorage.getItem('token')}`,
                    },
                });
                if (res.data.success) {
                    alert(res.data.message);
                    document.location.reload();
                }
            }
        </script>
    </body>
</html>
